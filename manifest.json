{
  "manifest_version": 3,
  "name": "Audible Library Scanner",
  "version": "1.1",
  "description": "Scans your Audible library to track series and find new books",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "sidePanel"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+A",
        "mac": "Alt+Shift+A"
      },
      "description": "Open Audible Library Scanner"
    }
  },
  "host_permissions": [
    "https://*.audible.com/*",
    "https://*.audible.ca/*",
    "https://*.audible.co.uk/*",
    "https://*.audible.de/*",
    "https://*.audible.fr/*",
    "https://*.audible.it/*",
    "https://*.audible.es/*",
    "https://*.audible.com.au/*",
    "https://www.google-analytics.com/*"
  ],
  "action": {
    "default_title": "Open Audible Scanner"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.audible.com/*",
        "https://*.audible.ca/*",
        "https://*.audible.co.uk/*",
        "https://*.audible.de/*",
        "https://*.audible.fr/*",
        "https://*.audible.it/*",
        "https://*.audible.es/*",
        "https://*.audible.com.au/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
